<div class="example-wrapper">
    <h1>Liste des FicheFrais</h1>


    <table class="table table-striped">
        <thead>
        <tr>
            <td scope="col">Id</td>
            <th scope="col">Date modifi√©</th>
            <th scope="col">Monant</th>
            <th scope="col">Mois</th>
            <th scope="col">Libelle</th>
        </tr>
        </thead>
        {% for fichefrais in fichesfrais %}

            <tbody>
            <tr>
                <th scope="row">{{ fichefrais.id }}</th>
                <td>{{ fichefrais.dateModif |date('d-m-Y') }}</td>
                <td>{{ fichefrais.montant }}</td>
                <td>{{ fichefrais.mois }}</td>
                <td>{{ fichefrais.etat.libelle }}</td>
                <td><a href="{{ path('app_fiche_frais_show', {'id': fichefrais.id}) }}">Afficher</a></td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
</div>


{% endblock %}